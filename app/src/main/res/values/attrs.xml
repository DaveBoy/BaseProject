<?xml version="1.0" encoding="utf-8"?>
<resources>

	<declare-styleable name="MyView1">
		<attr name="my_text" format="string" />
		<attr name="my_textColor" format="color" />
		<attr name="my_textSize" format="dimension" />
	</declare-styleable>

	<declare-styleable name="MyImage">
		<attr name="image_text" format="string" />
		<attr name="image_textColor" format="color" />
		<attr name="image_textSize" format="dimension" />
		<attr name="image" format="reference" />
		<attr name="imageScaleType">
			<enum name="fillXY" value="0" />
			<enum name="center" value="1" />
		</attr>
	</declare-styleable>

</resources>