<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/glide_img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:maxHeight="@dimen/maxHeight"
        android:maxWidth="@dimen/maxWidth" />

    <Button
        android:id="@+id/glide_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/glide_img1"
        android:layout_centerHorizontal="true"
        android:text="@string/loadImg" />

    <Button
        android:id="@+id/glide_blur_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/glide_btn"
        android:layout_centerHorizontal="true"
        android:text="加载高斯模糊" />
    <Button
        android:id="@+id/glide_circle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/glide_blur_btn"
        android:layout_centerHorizontal="true"
        android:text="加载圆角图片" />

</RelativeLayout>
